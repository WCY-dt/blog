{
    "files.associations": {
        "*.html": "liquid",
        "*.md": "markdown",
        "search.json": "liquid",
        "**/assets/js/theme.js": "liquid",
        "**/assets/style/main.scss": "liquid",
        "**/assets/style/post.scss": "liquid"
    },
    "[liquid]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.autoIndent": "advanced",
        "editor.detectIndentation": false,
        "editor.formatOnSave": false
    },
    "[scss]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.autoIndent": "advanced",
        "editor.detectIndentation": false,
        "editor.formatOnSave": false
    },
    "[javascript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.autoIndent": "advanced",
        "editor.detectIndentation": false,
        "editor.formatOnSave": false
    },
    "[xml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.autoIndent": "advanced",
        "editor.detectIndentation": false,
        "editor.formatOnSave": false
    },
    "[json]": {
      "editor.formatOnSave": false
    },
    "markdownlint.config": {
        "MD007": false,
        "MD010": false,
        "MD013": false,
        "MD024": false,
        "MD026": false,
        "MD028": false,
        "MD029": false,
        "MD031": false,
        "MD032": false,
        "MD033": false,
        "MD034": false,
        "MD036": false,
        "MD059": false
    },
    "files.exclude": {
        "**/_site": true,
        "**/.sass-cache": true,
        "**/.jekyll-cache": true,
        "**/.jekyll-metadata": true
    },
    "liveServer.settings.root": "/_site"
}
